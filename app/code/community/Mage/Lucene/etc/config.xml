<config>
    <modules>
        <Mage_Lucene>
            <version>0.1.0</version>
        </Mage_Lucene>
    </modules>
    <frontend>
        <routers>
            <lucene>
                <use>standard</use>
                <args>
                    <module>Mage_Lucene</module>
                    <frontName>search</frontName>
                </args>
            </lucene>
        </routers>
        <layout>
            <updates>
                <lucene>
                    <file>lucene.xml</file>
                </lucene>
            </updates>
        </layout>
        <translate>
            <modules>
                <Mage_Lucene>
                    <files>
                        <default>Mage_Lucene.csv</default>
                    </files>
                </Mage_Lucene>
            </modules>
        </translate>
    </frontend>
    <global>
        <blocks>
            <lucene>
                <class>Mage_Lucene_Block</class>
            </lucene>
        </blocks>
        <helpers>
            <lucene>
                <class>Mage_Lucene_Helper</class>
            </lucene>
        </helpers>
        <models>
            <lucene>
                <class>Mage_Lucene_Model</class>
            </lucene>
        </models>
        <translate>
            <modules>
                <Mage_Lucene>
                    <files>
                        <default>Mage_Lucene.csv</default>
                    </files>
                </Mage_Lucene>
            </modules>
        </translate>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Lucene>
                    <files>
                        <default>Mage_Lucene.csv</default>
                    </files>
                </Mage_Lucene>
            </modules>
        </translate>
    </adminhtml>
</config>