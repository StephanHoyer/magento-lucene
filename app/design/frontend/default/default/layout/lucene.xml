<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="left">
            <block type="lucene/form" name="lucene.form" as="form" template="lucene/form.phtml" before="-"/>
            <remove name="top.search"/>
        </reference>
    </default>
    <lucene_index_index>
        <reference name="content">
            <block type="lucene/result" name="lucene.result" template="lucene/result.phtml">
                <block type="lucene/form" name="lucene.form" as="form" template="lucene/form.phtml"/>
            </block>
        </reference>
    </lucene_index_index>
</layout>